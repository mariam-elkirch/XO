<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:id="@+id/player_1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="player 1"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/player_2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="player 2"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/player_1_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/player_1_label"
            app:layout_constraintStart_toStartOf="@id/player_1_label"
            app:layout_constraintEnd_toEndOf="@id/player_1_label"
    />
    <TextView
            android:id="@+id/player_2_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/player_2_label"
            app:layout_constraintStart_toStartOf="@id/player_2_label"
            app:layout_constraintEnd_toEndOf="@id/player_2_label"
    />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/player_1_score">

        <TextView
                android:id="@+id/label1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/tac_toe_label_bg"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/label4"
                app:layout_constraintEnd_toStartOf="@+id/label2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="123"/>

        <TextView
                android:id="@+id/label2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/tac_toe_label_bg"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/label5"
                app:layout_constraintEnd_toStartOf="@+id/label3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/label1"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="123"/>

        <TextView
                android:id="@+id/label3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/tac_toe_label_bg"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/label6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/label2"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="123"/>

        <TextView
                android:id="@+id/label4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/tac_toe_label_bg"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/label7"
                app:layout_constraintEnd_toStartOf="@id/label5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label1"
                tools:text="123"/>

        <TextView
                android:id="@+id/label5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/tac_toe_label_bg"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/label8"
                app:layout_constraintEnd_toStartOf="@+id/label6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/label4"
                app:layout_constraintTop_toBottomOf="@+id/label2"
                tools:text="123"/>

        <TextView
                android:id="@+id/label6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/tac_toe_label_bg"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:textSize="32sp"
                app:layout_constraintBottom_toTopOf="@+id/label9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/label5"
                app:layout_constraintTop_toBottomOf="@+id/label3"
                tools:text="123"/>

        <TextView
                android:id="@+id/label7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/tac_toe_label_bg"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/label8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label4"
                tools:text="123"/>

        <TextView
                android:id="@+id/label8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/tac_toe_label_bg"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/label9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/label7"
                app:layout_constraintTop_toBottomOf="@+id/label5"
                tools:text="123"/>

        <TextView
                android:id="@+id/label9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/tac_toe_label_bg"
                android:gravity="center"
                android:onClick="onPlayerClick"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/label8"
                app:layout_constraintTop_toBottomOf="@+id/label6"
                tools:text="123"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>